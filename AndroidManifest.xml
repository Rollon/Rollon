<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rollonapp.rollon"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/rollon_blue_icon"
        android:label="@string/app_name"
        android:logo="@drawable/rollon_blue"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.rollonapp.rollon.activities.RssFeedReaderActivity"
            android:label="" >
        </activity>
        <activity
            android:name="com.rollonapp.rollon.activities.FeedsActivity"
            android:label=""
            >
        </activity>
        <activity
            android:name="com.rollonapp.rollon.activities.CustomRssActivity"
            android:label="" >
        </activity>
        <activity
            android:theme="@android:style/Theme.NoTitleBar"
            android:name="com.rollonapp.rollon.activities.MainActivity"
            android:label="@string/title_activity_main" 
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.rollonapp.rollon.activities.FullscreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_fullscreen"
            android:theme="@style/FullscreenTheme" >
        </activity>
    </application>

</manifest>